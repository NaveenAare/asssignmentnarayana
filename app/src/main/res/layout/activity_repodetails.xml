<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.repodetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:id="@+id/card"
                app:cardElevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">
                    <ImageView
                        android:src="@drawable/gitt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/myimageview"></ImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_marginTop="10dp"
                android:id="@+id/pub"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000"
                android:text="Public"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pub"
                android:layout_marginTop="10dp"
                android:id="@+id/publics"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000"
                android:text="Public"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/publics"
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000"
                android:text="Public"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"
                android:id="@+id/description"
                android:textSize="17dp"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#000"
                android:text="Description"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@+id/description"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/openinbrowser"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#000"
                        android:text="Open project In browser"></TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>